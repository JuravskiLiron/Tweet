@model PostDetailsView

<h2>@Model.Post.Title</h2>
<p><strong>Title:</strong>@Model.Post.Content</p>
<p><strong>Content:</strong>@Model.Post.Content</p>
<p><strong>Image: </strong> <br/> @if (!string.IsNullOrEmpty(Model.Post.ImagePath))
                                  {
                                      <img src="@Model.Post.ImagePath" alt="Post Image" class="img-fluid rounded mb-3"/>
                                  }
</p>

<p><strong>Created by: </strong>@Model.Post.User.UserName@Model.Post.CreatedAt.ToString("g")</p>
<p><strong>Time of creation</strong>@Model.Post.CreatedAt.ToString("g")</p>
<h3>Comments</h3>
<div id="comments-section">
    @await Html.PartialAsync("_CommentsPartial", Model.Comments)
    
</div>

<hr>
<h4>Add Comment</h4>

<form asp-action="AddComment" asp-controller="Comment" method="post">
    <div>
        <input type="hidden" name="postId" value="@Model.Post.Id"/>
        <textarea name="content" placeholder="Add a comment..." required></textarea>
        <button type="submit">add Comment</button>
    </div>
</form>

















